<ips:template parameters="$tickets, $createLink"/>
<div style="text-align: right">
	{template="button" app="core" group="forms" location="global" params="'ticket_create', 'link', $createLink, 'ipsButton ipsButton--primary', ['tabindex' => 1, 'accesskey' => 'c']"}
</div>
<div class="i-flex i-flex-direction_column i-gap_1">
	{{foreach $tickets as $ticket}}
		<a class="ipsBox i-padding_2" href="{url="app=vssupport&controller=tickets&do=view&id={$ticket['id']}"}">
			<h3><span class="prio-label prio-{$ticket['priority']}">{lang="ticket_prio_name_{$ticket['priority']}"}</span> {$ticket['subject']}</h3>
			<h3>{$ticket['created']}</h3>
		</a>
	{{endforeach}}
</div>